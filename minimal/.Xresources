!!!!!!!!!!!!
!!! FONT !!!
!!!!!!!!!!!!

URxvt.font:xft:DejaVu Sans Mono:pixelsize=15
URxvt.boldFont:xft:DejaVu Sans Mono:bold:pixelsize=15
URxvt.italicfont:xft:DejaVu Sans Mono:italic:pixelsize=15
URxvt.bolditalicFont:xft:DejaVu Sans Mono:bold:italic:pixelsize=15
URxvt*letterSpace: -1
URxvt*allow_bold: true

! Font configuration
Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!!! SCROLLBAR AND CURSOR !!!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!

URxvt*saveLines: 300000
URxvt.scrollBar: false
!URxvt*scrollstyle: plain
URxvt*cursorBlink: true
URxvt*cursorUnderline: false

!!!!!!!!!!!!
!!! TABS !!!
!!!!!!!!!!!!

URxvt.tabbedex.autohide: yes
URxvt.tabbedex.tabbar-fg: 2
URxvt.tabbedex.tabbar-bg: 0
URxvt.tabbedex.tab-fg: 10
URxvt.tabbedex.tab-bg: 0
URxvt.tabbedex.title: yes
URxvt.tabbedex.new-button: no


!!!!!!!!!!!!!
!!! COLOR !!!
!!!!!!!!!!!!!

! special
*.foreground:   #e8dfd6
*.background:   #021b21
*.cursorColor:  #e8dfd6

! black
*.color0:       #032c36
*.color8:       #065f73

! red
*.color1:       #c2454e
*.color9:       #ef5847

! green
