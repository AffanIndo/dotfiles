! white
*.color7:       #98d1ce
*.color15:      #d3ebe9

!!!!!!!!!!!!
!!! MISC !!!
!!!!!!!!!!!!

! Window size
URxvt.geometry: 80x22

! Disable picture insert mode
URxvt.iso14755: False

! Disable bell
URxvt.insecure: false

